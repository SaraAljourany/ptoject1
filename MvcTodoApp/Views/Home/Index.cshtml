@model IEnumerable<MvcTodoApp.Models.TaskItem>

<h1>قائمة المهام</h1>

<form method="post" asp-action="AddTask">
    <input type="text" name="title" placeholder="أدخل عنوان المهمة" required />
    <button type="submit">إضافة مهمة</button>
</form>

@foreach (var task in Model)
{
    <form method="post" asp-action="Edit">
        <input type="hidden" name="Id" value="@task.Id" />
        <input type="text" name="Title" value="@task.Title" />
        <input type="checkbox" name="IsComplete" value="true" @(task.IsComplete ? "checked" : "") />
        <button type="submit">تعديل</button>
    </form>
}